<div class="curriculum">
  <h1>Curriculum</h1>
  <p>All tasks organized by their category.</p>
  <ol>
  <% @categories.each do |category| %>
    <li>
      <%= category.name %> <span>(<%= category.sum_points %> Points)</span>
      <ul>
        <% category.tasks.order(:lesson_number).each do |task| %>
          <li><span class="<%= status_indicator(task) %>"><%= status_checkbox(task) %> <%= task.name %></span></li>
        <% end %>
      </ul>
    </li>
  <% end %>
  </ol>
</div> <!-- curriculum -->
