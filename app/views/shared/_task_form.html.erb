<%= form_for task do |f| %>

  <%= f.label :title %>
  <br />
  <%= f.text_field :title %>
  <br />

  <%= f.label :complete_date %>
  <br />
  <%= f.date_field :complete_date, :required => true%>
  <br />

  <%= f.label :description %>
  <br />
  <%= f.text_area :description %>
  <br />

  <%= f.label :priority %>
  <br />
  <%= f.number_field :priority, :min => 0, :max => 5 %>
  <br />

  <%= f.label :category %>
  <br>
  <%= f.text_field :category %>
  <br>

  <%= f.submit %>

<% end %>
