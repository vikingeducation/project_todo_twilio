<%= form_for @task do |t| %>
  <%= t.label :date %><p>
  <%= t.date_select :date, {order: [:month, :day, :year], prompt: { day: 'Select day', month: 'Select month', year: 'Select year' }, start_year: Date.today.year, end_year: Date.today.year + 2}, {required: true} %>

  <%= t.label :description %>
  <%= t.text_field :description %>

  <%= t.submit %>
<% end %>
