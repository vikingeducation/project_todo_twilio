<%= form_for @task do |f| %>

  <% if @task.errors.any? %>
    <ul>
    <% @task.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  <% end %>
  
  <%= f.label :description %><br>
  <%= f.text_area :description %><br>
  <br>
  <%= f.label :completion_date %><br>
  <%= f.date_select :completion_date %><br>
  <br>
  <%= f.label :tag_list %><br>
  <%= f.text_field :tag_list %>
  <br>
  <%= f.submit %>
<% end %>