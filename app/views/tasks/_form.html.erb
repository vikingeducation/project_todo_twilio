<%= form_for @task do |f| %>
  <%= f.label :description %>
  <%= f.text_area :description %></br>

  <%= f.label :completion_date %>
  <%= f.date_field :completion_date %></br>

  <%= f.label :priority %>
  <%= f.number_field :priority %>

  <%= f.label :crossed_out %>
  <%= f.check_box :crossed_out %>

  <%= f.label :sticky %>
  <%= f.check_box :sticky %>

  <%= f.submit "Submit" %>
<% end %>