<%= form_for task, :html => {class: "form-horizontal"} do |f| %>
  <fieldset>
    <legend>New Task</legend>
    <div class="form-group">
      <%= f.label :title, 'Title', class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= f.text_field :title, class: "form-control", placeholder: "At least four words..." %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :description, 'Description', class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= f.text_area  :description, class: "form-control", rows: 8, placeholder: "More about the task..." %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :due_date, 'Due date', class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= f.date_select :due_date, {}, {class: "form-control"} %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :priority, 'Priority', class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= f.select :priority, (0..5), {}, {class: "form-control"} %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :frequency, 'Recurring frequency(days)', class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= f.select :frequency, [0, 1, 7], {}, {class: "form-control"} %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <%= f.submit 'Submit', class: "btn btn-primary" %>
      </div>
    </div>
  </fieldset>
<% end %>
