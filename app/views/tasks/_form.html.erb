<%= form_for @task do |f| %>
<%= f.label :title, 'Task' %>
<%= f.text_field :title %>
<%= f.label :description %>
<%= f.text_field :description %>
<%= f.label :deadline %>
<%= f.date_field(:deadline) %>
<%= f.label :sticky %>
<%= f.check_box :sticky %>
<br>
<%= f.label :importance %>
<%= f.radio_button :importance, '1' %>
<span>1</span>
<%= f.radio_button :importance, '2' %>
<span>2</span>
<%= f.radio_button :importance, '3', :checked => true %>
<span>3</span>
<%= f.radio_button :importance, '4' %>
<span>4</span>
<%= f.radio_button :importance, '5' %>
<span>5</span><br>
<%= f.submit %>
<% end %>