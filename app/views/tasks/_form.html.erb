<%= form_for @task do |f| %>
	<div class="form-group">
		<%= f.label :name %>:
		<%= f.text_field :name, class: "form-control" %>
	</div>

	<div class="form-group">
		<%= f.label :description %>:
		<%= f.text_area :description, class: "form-control", rows: "3" %><br />
	</div>

	<div class="form-group">
		<%= f.label :completion %>:
		<%= f.date_field :completion, class: "datepicker" %>
	</div>

	<div class="form-group">
		<% if is_new %>
			<%= f.submit "Create Task", class: "btn btn-primary" %>
		<% else %>
			<%= f.submit "Edit Task", class: "btn btn-primary" %>
		<% end %>
	</div>
<% end %>