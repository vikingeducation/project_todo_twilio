<%= form_for(@task) do |f| %>
  <ul>
  <% @task.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul>
  <p>
    <%= f.label :name %><br/>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br/>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :completion_date %><br/>
    <%= f.date_field :completion_date, min: Time.now.to_date %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>