<%= form_for @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br />

  <%= f.label :description %>
  <%= f.text_area :description %><br />

  <%= f.label :completion_date, "Completion Date" %>
  <%= f.date_select :completion_date %><br />

  <%= f.label :rating, "Choose a priority rating:"%>
  <%= f.select(:rating, options_for_select([1,2,3,4,5])) %>

  <%= f.submit%>
<%end %>