
<% if task.soft_delete_flag %>
  <div class="muted">
<% else %>
  <div>
<% end %>
  <h3><%= task.title %></h3>
  <% if task.rating %>
    <p> Rating: <%= task.rating%> </p>
  <% end %>
  <h5>Complete by: <%= task.completion_date.strftime("%m/%d/%Y") %></h5>
   <p>
     Donezo: <%= check_box_tag( :task, "blah", task.completed? ) %>
   </p>
  <p>
    <%= task.description %>
  </p>
</div>
  <%= link_to "Edit", edit_task_path(task) %>
  <%= link_to "Delete", task_path(task), :method => :delete %>
