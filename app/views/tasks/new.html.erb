<h1>New Task</h1>

<%= form_for @task do |f| %>
  <p>
    <%= f.label :title %> <br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %> <br>
    <%= f.text_area :description, :rows => 10, :cols => 30 %>
  </p>
  <p>
    <%= f.label :required_completion_date %> <br>
    <%= f.date_select :required_completion_date %>
  </p>
  <%= f.submit "Create Task" %>

<% end %>
