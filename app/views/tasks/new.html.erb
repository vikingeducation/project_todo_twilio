<%= form_for @task do |t| %>
    <div class="form-group">
      <%= t.label :title%>
      <%= t.text_field :title, :class => 'form-control' %>
    </div>
    <div class="form-group">
      <%= t.label :description %>
      <%= t.text_area :description, :class => 'form-control' %>
    </div>
    <%= t.submit 'Create Task', :class => 'btn btn-primary pull-right' %>
<% end %>