<%= link_to "Create Task", new_task_path, :class => "btn btn-default " %>
<% @tasks.each do |task| %>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          <%= link_to "#{task.title}", task_path(task) %>
        </h3>
        <%= "created #{distance_of_time_in_words(Time.now,task.created_at)} ago."  %>
      </div>
      <div class="panel-body">
        <%= content_tag :p, task.description %>
      </div>
      <div class="row">
        <div class="col-xs-3 col-xs-offset-6">
          <%= link_to "Edit Task", edit_task_path(task), :class => "btn btn-block btn-default " %>
        </div>
        <div class="col-xs-3">
          <%= link_to "Delete Task", task_path(task), :class => "btn btn-block  btn-danger", method: :delete %>
        </div>
      </div>
    </div>
<% end %>
<%= paginate @tasks %>