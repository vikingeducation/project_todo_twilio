
<div class="container">
  <div class = "row">
    <div class = "col-sm-4 col-sm-offset-5">
      <h1>Your Tasks</h1>
    </div>
  </div>

  <hr>

  <div class = "row">
  <% @tasks.each do |task| %>
    <div class = "col-sm-6">

      <div class = "row">
        <div class = "col-sm-8">
          <h4>
            Task: <%= task.todo %>
          </h4>
        </div>

        <div class = "col-sm-4">
          <h6><%= link_to "Edit Task", edit_user_task_path(task) %></h6>
          <h6><%= link_to "Delete Task", user_task_path(task), method: :delete, class: "alert-danger" %></h6>
        </div>

      </div>

      <div class = "row">
        <div class = "col-sm-8">
          <h6>
            Completion Date:
              <% if task.completion_date %>
                <%= task.completion_date %>
              <% else %>
                Not yet completed
              <% end %>
          </h6>
        </div>
        <div class = "col-sm-4">
          <h6>
            <% if task.completion_date %>
                <%= link_to "Undo Completion", mark_complete_path(task), method: :put, class: "alert-warning" %>
              <% else %>
                <%= link_to "Mark Complete", mark_complete_path(task), method: :put, class: "alert-success" %>
              <% end %>
          </h6>
        </div>
      </div>

    </div>
  <% end %>
  </div>
  <hr>
  <div class = "col-md-4 col-md-offset-5">
    <%= link_to "New Task", new_task_path, :class => "btn btn-lg btn-primary" %>
  </div>

</div>
