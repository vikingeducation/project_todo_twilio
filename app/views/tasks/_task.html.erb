<% sort_due_date(@tasks).each do |task| %>
  <li>
    <%= link_to task.title, task_path(task), class: "#{'complete' if task.complete}" %>
    <%= link_to "Delete", task_path(task), method: "delete" %>
    <%= link_to "Edit", edit_task_path(task) %>
    <%= link_to "text", task_texts_path(task), {method: "post"} %>
  </li>
<% end %>
