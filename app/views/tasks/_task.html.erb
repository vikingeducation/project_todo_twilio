<table>
  <tr>
    <th>Description</th>
    <th>Completion Date</th>
  </tr>

    <% @tasks.each do |task| %>
    <tr>
      <td class=
        <%='cross-out' if task.crossed_out == true %>
          ><%=link_to task.description, task_path(task) %></td>
      <td><%= task.completion_date %></td>
      <td><%= link_to "Delete", task_path(task), :method => :delete %></td>
      <td><%= link_to "Edit", edit_task_path(task) %></td>
      <td><%= link_to "Remind Me", phone_form_path(task) %></td>
    </tr>
    <% end %>

</table>