<tbody>
  <% @tasks.each do |task| %>
    <% if task.soft_delete %>
      <tr class="soft_deleted">
    <% else %>
       <tr>
    <% end %>
      <td>
        <%= task.description %>
      </td>
      <td>
        <%= task.complete_by_date %>
      </td>
      <td>
        <%= link_to "See Details", task_path(task) %>
      </td>
      <td>
        <%= link_to "Edit", edit_task_path(task) %>
      </td>
      <td>
        <%= link_to "Soft Delete", soft_delete_path(task), method: :post %>
      <td>
        <%= link_to "Delete", 'tasks#destroy', method: :delete, data: {confirm: "Are yous sure you want to delete this task?"} %>
      </td>
    </tr>
  <% end %>

</tbody>
