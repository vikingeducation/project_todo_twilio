<h1><%= @task.title %></h1>


<h3><%= @task.owner %></h3>
<p><%= @task.completion_date %></p>

<div>
  <p><b>Description:</b></p>
  <p><%= @task.description %></p>
  <p><b>Effort: </b><%= @task.effort %></p>
</div>

<%= link_to "Edit Task", edit_task_path(@task) %>
<%= link_to "Delete Task", task_path(@task), :method => :delete, data: {confirm: "Are you sure you want to delete the task?"} %>


