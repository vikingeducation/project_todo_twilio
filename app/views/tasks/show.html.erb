<div class="col-md-10 col-md-offset-1">
  <h2><%= @task.title %></h2>
  <p>Due in <%= distance_of_time_in_words(Time.now, @task.deadline) %></p>
  <hr>
  <p><%= @task.description %></p>
  <%= link_to edit_task_path(@task), class: "btn btn-info btn-block" do %>
    <span class="glyphicon glyphicon-pencil"></span> Edit
  <% end %>

  <%= link_to task_path(@task), method: :delete, class: "btn btn-danger btn-block" do %>
    <span class="glyphicon glyphicon-trash"></span> Delete
  <% end %>
</div>
