<%= render partial: 'task_detail', locals: {task: @task} %>
<% if @task.soft_delete_flag %>
  <%= form_for @task, :method => "patch" do |f| %>
    <%= f.hidden_field :soft_delete_flag, value: false%>
    <%= f.submit value: "Restore"%>
  <% end %>
<% else %>
  <%= form_for @task, :method => "patch" do |f| %>
    <%= f.hidden_field :soft_delete_flag, value: true%>
    <%= f.submit value: "Soft Delete"%>
  <% end %>
<% end %>
<%= form_tag("/text") do %>
  <%= hidden_field_tag :title, @task.title %>
  <%= hidden_field_tag :description, @task.description %>
  <%= hidden_field_tag :completion_date, @task.completion_date%> 
  <%= submit_tag("Text Reminder") %>
<% end%>


