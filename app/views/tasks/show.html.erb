<div class="container main-content">
  <div class="panel panel-default panel-style">
    <div class="panel-heading panel-heading-style">
      <h3 class="panel-title"><%= @task.name %></h3>
    </div>
    <div class="panel-body">
      <table class="table table-style">
        <tbody>
          <tr>
            <th class="col-sm-3 col-xs-4">Description:</th>
            <td><%= @task.description %></td>
          </tr>
          <tr>
            <th>Target completion:</th>
            <td><%= @task.completion_date.strftime("%m-%d-%y") %></td>
          </tr>
        </tbody>
      </table>
      <%= link_to "<< All Tasks", tasks_path, class: "btn btn-primary btn-custom" %> 
      <%= link_to "Edit", edit_task_path(@task.id), class: "btn btn-primary btn-custom" %>
      <%= link_to "Delete", task_path(@task.id), method: :delete, class: "btn btn-primary btn-custom", data: {confirm: "Really delete the task?"} %>
    </div>
  </div>
</div>