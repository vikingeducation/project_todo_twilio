<div class="text-center">
<h1> <%= @user.name %></h1>

<h2> Phone Number: <%= @user.number %> </h2>
<div class="row">
<% @user.todos.each do |todo| %>
	<div class="col-xs-3 todo_entry">
		<h3><%= todo.goal %> : <%= todo.completion_date %></h3>
		<%= link_to "Edit this To Do", edit_user_todo_path(id: todo.id, user_id: todo.user_id)%>
		<%= link_to "Delete this To Do", [todo.user, todo], method: "delete" %>
		<%= form_tag(texts_path, method: "post") do %>
	  		<%= hidden_field_tag 'user_id', @user.id %>
	  		<%= hidden_field_tag 'id', todo.id %>
	  		<%= button_tag "Send SMS!" %>
	  	<% end %>
  	</div>
<% end %>
</div>
	<div class="row">
		<%= render partial: 'todos/form' %>
	</div>
</div>