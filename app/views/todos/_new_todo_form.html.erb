<%= form_tag({controller: "todos", action: "create"}, method: "post", class: "form-inline") do %>
  <div class="form-group">
  	<%= text_field_tag 'text',nil, class: "form-control", placeholder: "ToDo Text" %>
  </div>
  <div class="form-group">
  	<%= text_field_tag 'completion_date',nil, class: "form-control", type: "date" %>
  </div>
  <div class="form-group">
  	<%= submit_tag "Create ToDo", class: "btn btn-primary" %>
  </div>
<% end %>