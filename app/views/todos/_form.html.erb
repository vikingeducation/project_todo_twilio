<%= form_for @todo do |f| %>
  <div class='form-group'>
    <%= f.label :description %>
    <%= f.text_field :description, class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= f.label :due_date %>
    <%= f.text_field :due_date, class: 'form-control', placeholder: "YYYY-MM-DD" %>
  </div>
  <div class='form-group'>
    <%= f.submit %>
  </div>
<% end %>