<%= form_for(todo, :url => path) do |f| %>
	<div class="form-group">
		<%= f.label(:due, 'Due Date') %>
		<%= f.datetime_select(:due, :default => Time.now, :ampm => true, :class => 'form-control') %>
	</div>
	<div class="form-group">
		<%= f.label(:value, 'Description') %>
		<%= f.text_field(:value, :class => 'form-control') %>
	</div>
	<%= f.submit(:class => 'btn btn-primary') %>
<% end %>