<!DOCTYPE html>
<html>
  <head>
    <title>ProjectTodoTwilio</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'shared/nav' %>

    <% flash.each do |type, message| %>
      <div>
        <strong>
          <%= type.upcase %>! <%= message %>
        </strong>
      </div>
    <% end %>

    <%= yield %>
  </body>
</html>
